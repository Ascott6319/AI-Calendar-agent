# Environment Configuration
ENV=development
LOG_LEVEL=INFO

# AWS Configuration
AWS_REGION=us-east-1
AWS_DEFAULT_REGION=us-east-1

# Database Configuration (for development only)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ai_calendar_dev

# API Configuration
API_PORT=8000
API_HOST=0.0.0.0

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090

# Cache Configuration
REDIS_URL=redis://localhost:6379/0

# Development Only - Never use in production
DEV_MICROSOFT_CLIENT_ID=your_dev_client_id
DEV_GMAIL_CREDENTIALS_PATH=./secrets/gmail_credentials.json

# Security Configuration
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
